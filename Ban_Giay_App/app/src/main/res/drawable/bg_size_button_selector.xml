<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - red background (khi đã chọn) -->
    <item android:state_selected="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#E53935" />
            <stroke
                android:width="2dp"
                android:color="#C62828" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Pressed state - darker teal (khi nhấn/hover) -->
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#004D47" />
            <stroke
                android:width="2dp"
                android:color="#003D38" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Focused state - lighter teal (khi focus) -->
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#008B85" />
            <stroke
                android:width="2dp"
                android:color="#006C67" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Default state - teal background -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#006C67" />
            <stroke
                android:width="2dp"
                android:color="#004D47" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Disabled state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" />
            <stroke
                android:width="2dp"
                android:color="#999999" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>

